{
  "name": "next-typescript-tailwind-mdx-starter",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "NODE_ENV=production next build",
    "postbuild": "NODE_ENV=production next-sitemap",
    "start": "next start",
    "test": "jest --watch"
  },
  "dependencies": {
    "@emotion/react": "11.1.4",
    "next": "10.0.4",
    "next-seo": "^4.17.0",
    "next-sitemap": "^1.3.29",
    "react": "17.0.1",
    "react-dom": "17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-0",
    "@babel/plugin-transform-react-jsx": "^7.12.10",
    "@emotion/babel-plugin": "11.1.2",
    "@emotion/css": "^11.1.3",
    "@emotion/server": "^11.0.0",
    "@tailwindcss/aspect-ratio": "^0.2.0",
    "@tailwindcss/forms": "^0.2.1",
    "@tailwindcss/typography": "^0.3.1",
    "@testing-library/jest-dom": "^5.11.8",
    "@testing-library/react": "^11.2.2",
    "@types/node": "^14.14.16",
    "@types/react": "^17.0.0",
    "autoprefixer": "^10.1.0",
    "babel-jest": "^26.6.3",
    "babel-plugin-macros": "^3.0.1",
    "dotenv-flow": "^3.2.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.2.2",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "tailwindcss": "^2.0.2",
    "twin.macro": "^2.0.7",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write"
    ],
    "src/**/*.{ts,tsx,md,mdx,js}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "jsxBracketSameLine": false
  }
}
